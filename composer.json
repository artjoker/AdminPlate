{
    "name": "artjoker/boilerplate",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "doctrine/dbal": "^3.1",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/tinker": "^2.8",
        "laravel/ui": "^v4.2",
        "laravel/framework": "^10.10",
        "laravelcollective/html": "^6.2",
        "mcamara/laravel-localization": "^1.8",
        "nwidart/laravel-modules": "^8.2",
        "onecentlin/laravel-adminer": "^6.0",
        "rap2hpoutre/laravel-log-viewer": "^2.0",
        "spatie/laravel-permission": "^5.4"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.13",
        "fakerphp/faker": "^1.9.1",
        "laravel/telescope": "^4.14",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "files": [
            "app/Helpers/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "Modules/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "check_slyle": [
            "./tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -v --dry-run --show-progress=dots"
        ],
        "psalm": [
            "./tools/psalm/vendor/bin/psalm"
        ],
        "phpstan": [
            "./tools/phpstan/vendor/bin/phpstan analyse --ansi --memory-limit 512M"
        ],
        "check_code":[
            "composer check_slyle",
            "composer psalm",
            "composer phpstan"
        ],
        "fix_style": [
            "./tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -v --show-progress=dots"
        ]
    }
}
